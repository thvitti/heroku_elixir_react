<% if content.errors.any? %>
  <p>Errors: <%= content.errors.full_messages.join(' ') %></p>
<% end %>

<%= form_with(model: content, local: true)  do  |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
